{
  "name": "progressive-web-apps",
  "version": "1.0.0",
  "description": "Progressive Web Apps for the minor Web Development",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js --watch",
    "sass": "node-sass --watch resources/sass/app.scss -o public/css --output-style compressed",
    "dev-sass": "concurrently --kill-others \"npm run dev\" \"npm run sass\""
  },
  "author": "Ymaro Blue",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-handlebars": "^7.0.2",
    "node-sass": "^8.0.0"
  },
  "type": "module",
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}
